<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <!-- Buttons -->

    <style name="Button.Base" parent="">
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionButton" parent="Button.Base">
        <item name="android:background">@drawable/action_button_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PassiveButton" parent="Button.Base">
        <item name="android:background">@drawable/passive_button_shape</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DangerousButton" parent="Button.Base">
        <item name="android:background">@drawable/dangerous_button_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditText.Base" parent="">
        <item name="android:layout_height">35dp</item>
        <item name="android:ems">15</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:lines">1</item>
    </style>

</resources>
